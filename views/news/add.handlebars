{{> _errors}}

<div class="card card-body">
    <h3>The Breaking News</h3>
    <form action="/news" method="POST" enctype="multipart/form-data">
    <!-- después se le agregará el enctype -->
        <div class="form-group">
            <label for="title">Título</label>
            <input type="text" class="form-control" name="title" id="title" required>
        </div>
        <div class="form-group">
            <label for="category">Categoría</label>
            <select class="form-control" name="category" id="category">
                <option>Selecciona categoría</option>
                {{#each categories}}
                    <option value="{{_id}}">{{title}}</option>
                {{else}}
                    <option>No hay categorías</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="image">Imagen</label>
            <input type="file" name="image" class="form-control-file" id="image">
        </div>
        <div class="form-group">
            <label for="body">Cuenta la historia</label>
            <textarea name="body" id="editor" class="form-control"></textarea>
        </div>
        <div class="form-check">
            <input class="form-check-input" name="allowComments" type="checkbox" id="allowComments" checked="checked">
            <label class="form-check-label" for="allowComments">
                Allow Comments
            </label>
        </div>
        <button type="submit" class="btn btn-success btn-block mt-3">Add New</button>
    </form>
</div>