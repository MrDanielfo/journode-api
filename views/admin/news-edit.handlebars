{{> _errors}}

<div class="card card-body">
    <h3>Editar Noticia</h3>
    <form action="/admin" method="POST" enctype="multipart/form-data">
        <!-- después se le agregará el enctype -->
        <input type="hidden" name="idNoticia" value="{{news.id}}">
        <input type="hidden" name="hiddenImg" value="{{news.image}}">
        <div class="form-group">
            <label for="title">Título</label>
            <input type="text" class="form-control" name="title" value="{{news.title}}" id="title" required>
        </div>
        <div class="form-group">
            <label for="category">Categoría</label>
            <select class="form-control" name="category" id="category">
                <option value="{{news.category.id}}" selected>{{news.category.title}}</option>
                {{#each categories}}
                <option value="{{_id}}">{{title}}</option>
                {{else}}
                <option>No hay categorías</option>
                {{/each}}
            </select>
        </div>

        <div class="my-3">
            <img src="/img/{{news.image}}" alt="{{news.title}}" class="edit-img img-fluid">
        </div>
        
        <div class="form-group">
            <label for="image">Imagen</label>
            <input type="file" name="image" class="form-control-file" id="image">
        </div>
        <div class="form-group">
            <label for="body">Cuenta la historia</label>
            <textarea name="body" id="editor" class="form-control">{{news.body}}</textarea>
        </div>
        <div class="form-check">
            <input class="form-check-input" name="allowComments" type="checkbox" id="allowComments" checked="checked">
            <label class="form-check-label" for="allowComments">
                Allow Comments
            </label>
        </div>
        <button type="submit" class="btn btn-warning btn-block mt-3">Editar</button>
    </form>
</div>